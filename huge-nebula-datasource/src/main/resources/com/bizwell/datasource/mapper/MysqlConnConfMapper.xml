<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bizwell.datasource.mapper.MysqlConnConfMapper">
	<resultMap id="BaseResultMap" type="com.bizwell.datasource.bean.MysqlConnConf">
		<id column="id" property="id" />
		<result column="file_code" property="fileCode" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="db_url" property="dbUrl" jdbcType="VARCHAR" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="user_id" property="userId" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
	</resultMap>
	

	<insert id="save" parameterType="com.bizwell.datasource.bean.MysqlConnConf"
		useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="java.lang.Integer">
			select
			LAST_INSERT_ID()
		</selectKey>
		INSERT INTO `ds_mysql_conn_conf`
		(`name`,
		`db_url`,
		`username`,
		`password`,
		`user_id`)
		VALUES (
		#{name},
		#{dbUrl},
		#{username},
		#{password},
		#{userId});
	</insert>


	<select id="select" parameterType="com.bizwell.datasource.bean.MysqlConnConf"
		resultMap="BaseResultMap">
		SELECT
		`id`,
		`name`,
		`db_url`,
		`username`,
		`password`,
		`user_id`,
		DATE_FORMAT(create_time,'%Y-%m-%d') create_time
		FROM
		`ds_mysql_conn_conf`
		<where>
			<if test="null != id">
				and id = #{id}
			</if>
			<if test="null != userId">
				and user_id = #{userId}
			</if>
		</where>
	</select>
</mapper>