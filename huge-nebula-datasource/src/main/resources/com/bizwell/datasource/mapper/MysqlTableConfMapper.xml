<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bizwell.datasource.mapper.MysqlTableConfMapper">
	<resultMap id="BaseResultMap" type="com.bizwell.datasource.bean.MysqlTableConf">
		<id column="id" property="id" />
		<result column="conn_id" property="connId" />
		<result column="database_name" property="databaseName" jdbcType="VARCHAR" />
		<result column="table_name" property="tableName" jdbcType="VARCHAR" />
		<result column="table_comment" property="tableComment"
			jdbcType="VARCHAR" />
		<result column="user_id" property="userId" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
	</resultMap>


	<insert id="save" parameterType="com.bizwell.datasource.bean.MysqlTableConf"
		useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="java.lang.Integer">
			select
			LAST_INSERT_ID()
		</selectKey>
		INSERT INTO `nebula`.`ds_mysql_table_conf`
		(
		`conn_id`,
		`database_name`,
		`table_name`,
		`table_comment`,
		`user_id`)
		VALUES (
		#{connId},
		#{databaseName},
		#{tableName},
		#{tableComment},
		#{userId});
	</insert>


	<insert id="saveBatch" parameterType="com.bizwell.datasource.bean.MysqlTableConf"
		useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="java.lang.Integer">
			select
			LAST_INSERT_ID()
		</selectKey>
		INSERT INTO `nebula`.`ds_mysql_table_conf`
		(
		`conn_id`,
		`database_name`,
		`table_name`,
		`table_comment`,
		`user_id`)
		VALUES
		<foreach collection="list" item="entity" index="index"
			separator=",">
			('${entity.connId}',
			'${entity.databaseName}',
			'${entity.tableName}',
			'${entity.tableComment}',
			'${entity.userId}')
		</foreach>
	</insert>


	<select id="select" parameterType="com.bizwell.datasource.bean.MysqlTableConf"
		resultMap="BaseResultMap">
		SELECT
		`id`,
		`conn_id`,
		`database_name`,
		`table_name`,
		`table_comment`,
		`user_id`,
		DATE_FORMAT(create_time,'%Y-%m-%d') create_time
		FROM
		`ds_mysql_table_conf`
		<where>
			<if test="null != id">
				and id = #{id}
			</if>
			<if test="null != userId">
				and user_id = #{userId}
			</if>
		</where>
	</select>
</mapper>